{
  "name": "@youdotcom-oss/agent-skill",
  "private": true,
  "engines": {
    "node": ">=18",
    "bun": ">= 1.2.21"
  },
  "workspaces": [
    "tests/*"
  ],
  "scripts": {
    "build": "bun run --filter '*' build",
    "check": "bun run check:workspace-deps && bun run --filter '*' check && bun run check:py",
    "check:py": "uv tool run ruff check .",
    "check:write": "bun run --filter '*' check:write && bun run check:write:py",
    "check:write:py": "uv tool run ruff check --fix . && uv tool run ruff format .",
    "format:py": "uv tool run ruff format .",
    "prepare": "git config core.hooksPath .hooks",
    "test": "bun run test:ts && bun run test:py",
    "test:ts": "bun test",
    "test:py": "uv run pytest tests/"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "biome check --write --no-errors-on-unmatched"
    ],
    "*.{json,md}": [
      "biome format --write --no-errors-on-unmatched"
    ],
    "*.py": [
      "uv tool run ruff check --fix",
      "uv tool run ruff format"
    ],
    "package.json": [
      "format-package --write"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.15",
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@plaited/development-skills": "0.8.1",
    "@types/bun": "latest",
    "format-package": "^7.0.0",
    "lint-staged": "^16.2.7",
    "typescript": "5.9.3",
    "typescript-language-server": "5.1.3",
    "zod": "^4.3.6"
  }
}
